<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
            style="@style/BoatToolbar"
            app:title="@string/boat_tracker"
            android:id="@+id/profile_toolbar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
    <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_view_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@id/profile_toolbar"
            app:shimmer_auto_start="false">
        <com.malliina.boattracker.ui.profile.TrackSummaryBox
                android:id="@+id/summary_template"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </com.facebook.shimmer.ShimmerFrameLayout>
    <com.malliina.boattracker.ui.profile.TrackSummaryBox
            android:id="@+id/track_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/profile_toolbar"/>
    <Button style="@style/ProfileButtonStyle"
        android:id="@+id/tracks_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/tracks"
        android:onClick="tracksClicked"
        app:layout_constraintTop_toBottomOf="@id/shimmer_view_container"
        app:layout_constraintBottom_toTopOf="@id/boats_link"
        app:layout_constraintVertical_chainStyle="spread_inside"/>
    <Button style="@style/ProfileButtonStyle"
        android:id="@+id/boats_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/boats"
        android:onClick="boatsClicked"
        app:layout_constraintTop_toBottomOf="@id/tracks_link" />
    <TextView
        android:id="@+id/userEmailMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/boats_link"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/logout"
        app:layout_constraintVertical_bias="1"
        tools:text="Signed in as user@example.com" />
    <Button style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        android:onClick="signOutClicked"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>
