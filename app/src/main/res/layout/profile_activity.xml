<?xml version="1.0" encoding="utf-8"?>
<android.widget.ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            style="@style/BoatToolbar"
            android:id="@+id/profile_toolbar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:title="Boat-Tracker"/>
        <ProgressBar
            android:id="@+id/summary_progressbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@id/profile_toolbar"
            app:layout_constraintBottom_toTopOf="@id/tracks_link"
            />
        <com.malliina.boattracker.ui.profile.TrackSummaryBox
            android:id="@+id/track_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/profile_toolbar"/>
        <com.google.android.material.button.MaterialButton
            style="@style/ProfileButtonStyle"
            android:id="@+id/tracks_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:onClick="tracksClicked"
            app:layout_constraintTop_toBottomOf="@id/track_summary"
            app:layout_constraintBottom_toTopOf="@id/boats_link"
            app:layout_constraintVertical_chainStyle="spread_inside"
            tools:text="Tracks"/>
        <com.google.android.material.button.MaterialButton
            style="@style/ProfileButtonStyle"
            android:id="@+id/boats_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="boatsClicked"
            android:layout_marginBottom="60dp"
            app:layout_constraintTop_toBottomOf="@id/tracks_link"
            tools:text="Boats"/>
        <com.google.android.material.button.MaterialButton
            style="@style/ProfileButtonStyle"
            android:id="@+id/languages_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="languagesClicked"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@id/boats_link"
            tools:text="Languages"/>
        <com.google.android.material.button.MaterialButton
            style="@style/ProfileButtonStyle"
            android:id="@+id/licenses_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="licensesClicked"
            app:layout_constraintTop_toBottomOf="@id/languages_link"
            tools:text="Licenses"/>
        <TextView
            android:id="@+id/userEmailMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/licenses_link"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/logout"
            app:layout_constraintVertical_bias="1"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="8dp"
            tools:text="Signed in as user@example.com" />
        <com.google.android.material.button.MaterialButton
            style="@style/FilledButton"
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="signOutClicked"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Logout"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</android.widget.ScrollView>
