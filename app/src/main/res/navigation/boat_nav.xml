<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_settings"
    app:startDestination="@id/map">

    <fragment
        android:id="@+id/map"
        android:name="com.malliina.boattracker.ui.map.MapFragment"
        tools:layout="@layout/map_fragment">
        <action
            android:id="@+id/map_to_profile"
            app:destination="@id/profile" />
        <argument
            android:name="track"
            app:argType="com.malliina.boattracker.TrackName"
            app:nullable="true"
            android:defaultValue="@null"/>
        <argument
            android:name="fit"
            app:argType="boolean"
            android:defaultValue="true"/>
        <argument
            android:name="refresh"
            app:argType="boolean"
            android:defaultValue="false"/>
    </fragment>

    <fragment
        android:id="@+id/profile"
        android:name="com.malliina.boattracker.ui.profile.ProfileFragment"
        tools:layout="@layout/profile_activity">
        <action
            android:id="@+id/profile_to_tracks"
            app:destination="@id/tracks" />
        <action
            android:id="@+id/profile_to_boats"
            app:destination="@id/boats" />
        <action
            android:id="@+id/profile_to_languages"
            app:destination="@id/languages" />
        <action
            android:id="@+id/profile_to_attributions"
            app:destination="@id/attributions" />
        <action android:id="@+id/profile_to_map"
            app:destination="@id/map"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@+id/map"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/tracks"
        android:name="com.malliina.boattracker.ui.tracks.TracksFragment"
        android:label="{title}"
        tools:layout="@layout/tracks_activity">
        <action android:id="@+id/tracks_to_map"
            app:destination="@id/map"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@+id/map"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/boats"
        android:name="com.malliina.boattracker.ui.boats.BoatsFragment"
        android:label="{title}"
        tools:layout="@layout/tracks_activity"/>
    <fragment
        android:id="@+id/languages"
        android:name="com.malliina.boattracker.ui.language.LanguagesFragment"
        android:label="{title}"
        tools:layout="@layout/tracks_activity"/>
    <fragment
        android:id="@+id/attributions"
        android:name="com.malliina.boattracker.ui.attributions.AttributionsFragment"
        android:label="{title}"
        tools:layout="@layout/tracks_activity"/>
</navigation>
