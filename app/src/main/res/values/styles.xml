<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/seaBlue</item>
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="IconButtonStyle" parent="android:Widget.Button">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/fa_solid_900</item>
        <item name="android:backgroundTint">@color/iconBackground</item>
        <!-- Should be 0.3 for the follow button when the map is in follow mode -->
        <item name="android:alpha">0.6</item>
    </style>

    <style name="ProfileButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetLeft">4dp</item>
        <item name="android:insetRight">4dp</item>
    </style>

    <style name="FilledButton" parent="Widget.MaterialComponents.Button">
        <item name="android:insetLeft">4dp</item>
        <item name="android:insetRight">4dp</item>
    </style>

    <style name="BoatToolbar" parent="android:Widget.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation">4dp</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
    </style>
</resources>
