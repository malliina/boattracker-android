<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="IconButtonStyle" parent="android:Widget.Button">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/fa_solid_900</item>
        <item name="android:background">@color/iconBackground</item>
        <!-- Should be 0.3 for the follow button when the map is in follow mode -->
        <item name="android:alpha">0.6</item>
    </style>

    <style name="ProfileButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <!--<item name="android:background">@color/colorLink</item>-->
        <!--<item name="android:textColor">@color/colorLink</item>-->
    </style>

</resources>
